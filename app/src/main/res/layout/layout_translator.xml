<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_translator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_panel_rounded"> <LinearLayout
    android:id="@+id/layout_header_drag"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:background="#DD000000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="AI Translator"
        android:textColor="#FFD700"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_hide_ui"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:src="@android:drawable/ic_menu_view" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:src="@android:drawable/ic_menu_preferences" />

    <ImageView
        android:id="@+id/btn_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/btn_minimize"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_header_drag"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_settings_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EE222222"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập API Key Groq:"
                android:textColor="#FFF"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edt_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="gsk_..."
                android:singleLine="true"
                android:textColor="#FFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_save_key"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="Lưu &amp; Đóng" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Bấm icon Camera để quét..."
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#AA000000">

            <TextView
                android:id="@+id/btn_quick_scan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="QUÉT LẠI"
                android:textColor="#00FF00"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_resize_window"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#55FFFFFF"
                android:padding="5dp"
                android:rotation="90"
                android:src="@android:drawable/ic_menu_crop" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>